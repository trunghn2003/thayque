{
  "info": {
    "_postman_id": "user-service-collection",
    "name": "User Service API Test",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Register User",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"testuser\",\n  \"password\": \"TestPassword123\",\n  \"password2\": \"TestPassword123\",\n  \"email\": \"testuser@example.com\",\n  \"user_type\": \"patient\"\n}"
        },
        "url": {
          "raw": "http://localhost:8004/api/users/register/",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8004",
          "path": ["api", "users", "register", ""]
        }
      },
      "response": []
    },
    {
      "name": "Login User (Save Token)",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "var jsonData = pm.response.json();",
              "pm.environment.set('user_token', jsonData.access);"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"testuser\",\n  \"password\": \"TestPassword123\"\n}"
        },
        "url": {
          "raw": "http://localhost:8004/api/users/login/",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8004",
          "path": ["api", "users", "login", ""]
        }
      },
      "response": []
    }
  ]
}
